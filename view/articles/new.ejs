<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
        crossorigin="anonymous">
    <title>Blog Website</title>
</head>

<body>
    <div class="container">
        <h1 class="mb-4">Create New Article</h1>
        <form id="articleForm" action="/articles" method="POST">
            <%- include('form_field') %>
            <br>
            <a href="/" class="btn btn-secondary me-2">Cancel</a>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>

    <script>
        document.getElementById('articleForm').addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent the form from submitting normally

            // Submit the form via fetch or submit() method
            fetch('/articles', {
                method: 'POST',
                body: new FormData(document.getElementById('articleForm'))
            })
            .then(response => {
                // Redirect to the homepage after successful save
                if (response.ok) {
                    window.location.href = '/';
                } else {
                    throw new Error('Failed to save article');
                }
            })
            .catch(error => {
                console.error('Error saving article:', error);
                // Handle error if needed
            });
        });
    </script>
</body>

</html>
